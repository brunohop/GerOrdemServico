<p id="notice"><%= notice %></p>

<h1>Listando Catalogos</h1>

<table class="sortable table table-bordered table-hover table-condensed">

  <thead>
    <tr>
      <th>Item catalogo</th>
      <th>Tipo</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @catalogos.each do |catalogo| %>
      <tr>
        <td><%= catalogo.nome %></td>
        <td><%= catalogo.tipo %></td>
        <td><%= link_to '', catalogo,class: "glyphicon glyphicon-zoom-in" %></td>
        <td><%= link_to '', edit_catalogo_path(catalogo),class: "glyphicon glyphicon-edit" %></td>
        <td><%= link_to '', catalogo, method: :delete, data: { confirm: 'VocÃª tem certeza?' },class: "glyphicon glyphicon-remove" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

