<%= simple_form_for(@ordem_servico) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :fiscalcontrato,:collection => Pessoa.all,label_method: :pessoa,:label => "Fiscal de Contrato:" ,:include_blank => false %>
    <%= f.input :proj_id,:collection => Projeto.all,label_method: :projeto,:label => "Projeto" ,:include_blank => false %>
    <%= f.input :preposto,:collection => Pessoa.all,label_method: :pessoa,:label => "Preposto:" ,:include_blank => false %>
    <%= f.input :resptecnico,:collection => Pessoa.all,label_method: :pessoa,:label => "Responsável Técnico:" ,:include_blank => false %>
    <%= f.input :os, label:'Nome da OS: <Numero> - <Projeto> - <Refencia>:' %>
    <%= f.input :data_inicio %>
    <%= f.input :data_previsao %>
    <%= f.input :data_fim %>
    <%= f.input :situacao,:collection => OrdemServico.situacoes,:label => "Situação" ,:include_blank => false %>
    <%= f.input :resp_requisitante,:collection => Pessoa.all,label_method: :pessoa,:label => "Responsável requisitante:" ,:include_blank => false %>
    <%= f.input :tipo_os_id,:collection => OsTipo.all,label_method: :os_tipo,:label => "Tipo da OS:" ,:include_blank => false %>
    <%= f.input :fator_atendimento, label:'Fator de Atendimento:' %>
    <%= f.input :ust_pago, label:'UST pago sem glosa:' %>
    <%= f.input :ust_glosa, label:'Valor da glosa da OS:' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
