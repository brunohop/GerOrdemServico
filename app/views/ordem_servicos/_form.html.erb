<%= simple_form_for(@ordem_servico) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :tipo_os_id,:collection => OsTipo.all,label_method: :nome,:label => "Tipo da OS:" ,:include_blank => false %>
    <%= f.input :projeto_id,:collection => Projeto.all,label_method: :nome,:label => "Projeto" ,:include_blank => false %>
    <%= f.input :descricao,:label=> 'Descrição resumida dos serviços:', as: :wysihtml5 %>
    <%= f.input :sprint, label:'Sprint nº:' %>
    <%= f.input :fiscal_contrato_id,:collection => Pessoa.all,label_method: :nome,:label => "Fiscal de Contrato:" ,:include_blank => false %>
    <%= f.input :preposto_id,:collection => Pessoa.all,label_method: :nome,:label => "Preposto:" ,:include_blank => false %>
    <%= f.input :resp_tecnico_id,:collection => Pessoa.all,label_method: :nome,:label => "Responsável Técnico:" ,:include_blank => false %>
    <%= f.input :resp_requisitante_id,:collection => Pessoa.all,label_method: :nome,:label => "Responsável requisitante:" ,:include_blank => false %>
    <div class="inner-addon left-addon">
      <%= label_tag(:data_inicio, "Data Início:") %>
      <i class="glyphicon glyphicon-calendar"></i>
      <%= text_field :ordem_servico, :data_inicio,  class: 'datepicker'  %>
    </div>
    <div class="inner-addon left-addon">
      <%= label_tag(:data_previsao, "Data Previsão:") %>
      <i class="glyphicon glyphicon-calendar"></i>
      <%= text_field :ordem_servico, :data_previsao,  class: 'datepicker'  %>
    </div>
    <div class="inner-addon left-addon">
      <%= label_tag(:data_fim, "Data Fim:") %>
      <i class="glyphicon glyphicon-calendar"></i>
      <%= text_field :ordem_servico, :data_fim,  class: 'datepicker'  %>
    </div>
    <%= f.input :situacao,:collection => OrdemServico.situacoes,:label => "Situação" ,:include_blank => false %>
    <%= f.input :observacoes,:label=> 'Observações:', as: :wysihtml5 %>
    <%= f.input :fator_atendimento, label:'Fator de Atendimento:' %>
    <%= f.input :ust_pago, label:'UST pago sem glosa:' %>
    <%= f.input :ust_glosa, label:'Valor da glosa da OS:' %>
    <%= f.input :fechamento,:label=> 'Observações (laudo):', as: :wysihtml5 %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
