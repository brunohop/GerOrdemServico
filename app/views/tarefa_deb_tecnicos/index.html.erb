<p id="notice"><%= notice %></p>

<h1>Listando Débitos Técnicos de Tarefa</h1>

<table class="sortable table table-bordered table-hover table-condensed">

  <thead>
    <tr>
      <th>Id Tarefa</th>
      <th>Débito Técnico</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tarefa_deb_tecnicos.each do |tarefa_deb_tecnico| %>
      <tr>
        <td><%= tarefa_deb_tecnico.os_tarefa.id %></td>
        <td><%= tarefa_deb_tecnico.debito_tecnico.nome%></td>
        <td><%= link_to '', tarefa_deb_tecnico,class: "glyphicon glyphicon-zoom-in" %></td>
        <td><%= link_to '', edit_tarefa_deb_tecnico_path(tarefa_deb_tecnico),class: "glyphicon glyphicon-edit" %></td>
        <td><%= link_to '', tarefa_deb_tecnico, method: :delete, data: { confirm: 'Você tem certeza?' },class: "glyphicon glyphicon-remove" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Tarefa deb tecnico', new_tarefa_deb_tecnico_path %>
