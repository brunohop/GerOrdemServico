<p id="notice"><%= notice %></p>

<h1>Listando Entregáveis</h1>

<table class="sortable table table-bordered table-hover table-condensed">

  <thead>
    <tr>
      <th>#</th>
      <th>Entregavel</th>
      <th>Perfil</th>
      <th>Ativo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entregavels.each_with_index do |entregavel, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= entregavel.nome %></td>
        <td><%= entregavel.perfil %></td>
        <td><%= entregavel.ativo %></td>
        <td><%= link_to '', entregavel,class: "glyphicon glyphicon-zoom-in" %></td>
        <td><%= link_to '', edit_entregavel_path(entregavel),class: "glyphicon glyphicon-edit" %></td>
        <td><%= link_to '', entregavel, method: :delete, data: { confirm: 'Você tem certeza?' },class: "glyphicon glyphicon-remove" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Entregavel', new_entregavel_path %>
