<%= simple_form_for(@pessoa) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :vinculo %>
    <%= f.input :matricula %>
    <%= f.input :id_pessoa_redmine %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
