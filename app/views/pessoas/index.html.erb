<p id="notice"><%= notice %></p>

<h1>Listando Pessoas</h1>

<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Pessoa</th>
      <th>Vinculo</th>
      <th>Matricula</th>
      <th>Id pessoa redmine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pessoas.each do |pessoa| %>
      <tr>
        <td><%= pessoa.nome %></td>
        <td><%= pessoa.vinculo %></td>
        <td><%= pessoa.matricula %></td>
        <td><%= pessoa.id_pessoa_redmine %></td>
        <td><%= link_to '', pessoa,class: "glyphicon glyphicon-zoom-in" %></td>
        <td><%= link_to '', edit_pessoa_path(pessoa),class: "glyphicon glyphicon-edit" %></td>
        <td><%= link_to '', pessoa, method: :delete, data: { confirm: 'VocÃª tem certeza?' },class: "glyphicon glyphicon-remove" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

